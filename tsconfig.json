{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./",
    "baseUrl": "src",
    "outDir": "/dist",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "jsx": "react"
  },
  "include": [
    "src",
    "webpack.config.js"
  ]
}